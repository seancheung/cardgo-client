<?xml version='1.0' encoding='utf-8'?>
<widget id="com.psyclops.cardgo" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CardGo</name>
    <description>        Client side for CardGo, the card game platform.    </description>
    <author email="seancheung@psyclops.io" href="https://cardgo.online">        Psyclops    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="FullScreen" value="true" />
    <preference name="Orientation" value="landscape" />
    <chcp>
        <config-file url="http://192.168.199.204:8080/chcp.json" />
    </chcp>
    <engine name="android" spec="^6.3.0" />
    <engine name="ios" spec="^4.5.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-hot-code-push-plugin" spec="^1.5.3" />
</widget>
